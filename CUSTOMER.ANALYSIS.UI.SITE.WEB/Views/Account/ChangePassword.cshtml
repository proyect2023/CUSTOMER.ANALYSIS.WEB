@*@using CUSTOMER.ANALYSIS.APPLICATION.CORE.Constants;*@
@model CUSTOMER.ANALYSIS.UI.WEB.SITE.Models.UsuarioCambioClaveViewModel

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<div class="account-pages login">
    <div class="container">
        <div class="row justify-content-center mainContent">
            <div class="col-md-6 col-lg-6 col-xl-6 logoLogin">
                <div class="mainLogo">
                    @*<img src="~/assets/images/logoSAIN.png" alt="Alternate Text" />*@
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-6 contentRight">
                <div class="titleLogin">
                    <p>Cambie su Contraseña</p>
                </div>
                <form asp-action="ChangePassword" method="post" autocomplete="off">
                    <div class="p-2">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group has-feedback">
                            <label>
                                Ingrese su contraseña actual
                            </label>
                            <div ID="UpdatePanel4">
                                <input type="password" asp-for="ClaveActualConfirma" Class="form-control" placeholder="Contraseña actual" required>
                                <span asp-validation-for="ClaveActualConfirma" class="text-danger"></span>
                            </div>
                            <span class="glyphicon glyphicon-lock form-control-feedback" />
                        </div>
                        <br />
                        <div class="form-group has-feedback">
                            <label>
                                Ingrese su nueva contraseña
                            </label>
                            <div ID="UpdatePanel4">
                                <input type="password" asp-for="ClaveNueva" Class="form-control" placeholder="Contraseña nueva" required>
                                <span asp-validation-for="ClaveNueva" class="text-danger"></span>
                            </div>
                            <span class="glyphicon glyphicon-lock form-control-feedback" />
                        </div>
                        <br />
                        <div class="form-group has-feedback">
                            <label>
                                Confirme su nueva contraseña
                            </label>
                            <div ID="UpdatePanel4">
                                <input type="password" asp-for="ClaveNuevaConfirma" Class="form-control" placeholder="Confirme contraseña nueva" required>
                                <span asp-validation-for="ClaveNuevaConfirma" class="text-danger"></span>
                            </div>
                            <span class="glyphicon glyphicon-lock form-control-feedback" />
                        </div>
                        <br />
                        <div class='form-group text-center'>
                            <div class="row">
                                <div class="form-group text-center">
                                    <button Id="BtnConfirmar" type="submit" class="btn btn-info btn-block btn-login">Guardar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="mt-5 text-center">
            <div>
                <p>
                    <partial name="../Shared/_Footer" />
                    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
                    <script src="~/js/bootstrap.bundle.min.js"></script>
                    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
                </p>
            </div>
        </div>
    </div>
</div>
