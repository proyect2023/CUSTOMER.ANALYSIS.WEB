@*@using CUSTOMER.ANALYSIS.APPLICATION.CORE.Constants;*@
@model CUSTOMER.ANALYSIS.UI.WEB.SITE.Models.UsuarioCambioClaveViewModel

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="">
        <div class="carousel-item active">
            <img src="https://www.thenewnow.es/wp-content/uploads/2020/02/THENEWNOW-INTERNET-ESPACIO-iStock-1092964610-1200x600.jpg" class="d-block w-100" alt="...">
            
        </div>
        <div class="carousel-item">
            <img src="https://th.bing.com/th/id/OIP._6aYjhiVBCcytAZ_uCNADgHaEK?pid=ImgDet&rs=1" class="d-block w-100" alt="...">
            
        </div>
        <div class="carousel-item">
            <img src="https://cdn.computerhoy.com/sites/navi.axelspringer.es/public/styles/1200/public/media/image/2020/03/internet-1905035.jpg?itok=ypqFIkKW" class="d-block w-100" alt="...">
            
        </div>
    </div>
</div>

<div class="account-pages login">
    <div class="container">
        <div class="row justify-content-center mainContent" style="position: relative;">
            <div class="col-md-7 col-lg-7 col-xl-7 logoLogin" style="place-items: center;">
                <img src="~/assets/images/logo-lg.jpeg" alt="Alternate Text" height="100%" />
            </div>
            <div class="col-md-5 col-lg-5 col-xl-5 contentRight">
                <div class="titleLogin">
                    <p>Cambie su Contraseña</p>
                </div>
                <form asp-action="ChangePassword" method="post" autocomplete="off">
                    <div class="p-2">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group has-feedback">
                            <label>
                                Ingrese su contraseña actual
                            </label>
                            <div ID="UpdatePanel4">
                                <input type="password" asp-for="ClaveActualConfirma" Class="form-control" placeholder="Contraseña actual" required>
                                <span asp-validation-for="ClaveActualConfirma" class="text-danger"></span>
                            </div>
                            <span class="glyphicon glyphicon-lock form-control-feedback" />
                        </div>
                        <br />
                        <div class="form-group has-feedback">
                            <label>
                                Ingrese su nueva contraseña
                            </label>
                            <div ID="UpdatePanel4">
                                <input type="password" asp-for="ClaveNueva" Class="form-control" placeholder="Contraseña nueva" required>
                                <span asp-validation-for="ClaveNueva" class="text-danger"></span>
                            </div>
                            <span class="glyphicon glyphicon-lock form-control-feedback" />
                        </div>
                        <br />
                        <div class="form-group has-feedback">
                            <label>
                                Confirme su nueva contraseña
                            </label>
                            <div ID="UpdatePanel4">
                                <input type="password" asp-for="ClaveNuevaConfirma" Class="form-control" placeholder="Confirme contraseña nueva" required>
                                <span asp-validation-for="ClaveNuevaConfirma" class="text-danger"></span>
                            </div>
                            <span class="glyphicon glyphicon-lock form-control-feedback" />
                        </div>
                        <br />
                        <div class='form-group text-center'>
                            <div class="row">
                                <div class="form-group text-center">
                                    <button Id="BtnConfirmar" type="submit" class="btn btn-info btn-block btn-login">Guardar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="mt-5 text-center">
            <div>
                <p>
                    <partial name="../Shared/_Footer" />
                    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
                    <script src="~/js/bootstrap.bundle.min.js"></script>
                    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
                </p>
            </div>
        </div>
    </div>
</div>
