@*@using CUSTOMER.ANALYSIS.APPLICATION.CORE.Constants;*@
@model CUSTOMER.ANALYSIS.UI.WEB.SITE.Models.UsuarioRecuperaClaveViewModel

@{
    ViewBag.Title = "Recuperar Clave";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<div class="account-pages login landingImg">
    <div class="container">
        <div class="row justify-content-center mainContent">
            <div class="col-md-6 col-lg-6 col-xl-6 logoLogin">
                <div class="mainLogo">
                    @*<img src="~/assets/images/logoSAIN.png" alt="Alternate Text" />*@
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-6 contentRight">
                <div class="titleLogin">
                    <p>Recuperar Contraseña</p>
                </div>
                <form asp-action="RecuperarClave" method="post" autocomplete="off">
                    <div class="p-2">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group has-feedback">
                            <label>
                                Ingrese el usuario
                            </label>
                            <div ID="UpdatePanel4">
                                <input type="text" asp-for="Usuario" Class="form-control" placeholder="Usuario" required>
                                <span asp-validation-for="Usuario" class="text-danger"></span>
                            </div>
                            <span class="glyphicon glyphicon-lock form-control-feedback" />
                        </div>
                        <br />
                        <div class="form-group has-feedback">
                            <label>
                                Ingrese su correo
                            </label>
                            <div ID="UpdatePanel4">
                                <input type="email" asp-for="CorreoElectronico" Class="form-control" placeholder="Correo Electronico" required>
                                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                            </div>
                            <span class="glyphicon glyphicon-lock form-control-feedback" />
                        </div>
                        <br />
                        <div class='form-group text-center'>
                            <div class="row">
                                <div class="form-group text-center">
                                    <button Id="BtnConfirmar" type="submit" class="btn btn-info btn-block btn-login">Enviar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="mt-5 text-center">
            <div>
                <p>
                    <partial name="../Shared/_footer" />
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="https://www.google.com/recaptcha/api.js?hl=es&onload=onloadCallback&render=explicit" async defer></script>

    @Html.Raw(TempData["msg"])
}